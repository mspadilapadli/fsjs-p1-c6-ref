<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BetaMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>Employees</h5>


            <div class="d-flex justify-content-center mb-3" style="gap: 10px;">
                <a class="btn btn-outline-warning" href="/employees">All</a>
                <a class="btn btn-outline-warning" href="/employees?by=Staff">Staff</a>
                <a class=" btn btn-outline-warning" href="/employees?by=Supervisor">Supervisor</a>
                <a class="btn btn-outline-warning" href="/employees?by=Manager">Manager</a>
                <a class="btn btn-outline-warning" href="/employees?by=CEO">CEO</a>

            </div>
            <table class="table">
                <thead>
                    <tr class="table-info">
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Store's Code</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((item)=> { %>
                        <tr>
                            <th scope="row">
                                <%= item.firstName%>

                            </th>
                            <td>
                                <%= item.position %>
                            </td>
                            <td>
                                <%= item.salary %>
                            </td>
                            <td>
                                <%= item.Store.code %>
                            </td>

                            <td>
                                <a href="/stores/:storeId/employees/<%= item.id %>/edit"
                                    class="btn btn-outline-primary">Edit</a>

                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>