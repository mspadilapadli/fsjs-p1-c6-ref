<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BetaMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">


            <h5>Edit Employee</h5>

            <form action="/stores/<%= storeId %>/employees/<%= employeeId %>/edit" method="post">
                <div class="row">
                    <div class="col">
                        <label class="form-label"> First Name</label>
                        <input type="text" class="form-control" name="firstName"
                            value="<%= updateData.dataValues.firstName  %>">
                    </div>
                    <div class="col">
                        <label class="form-label"> Last Name</label>
                        <input type="text" class="form-control" name="lastName"
                            value="<%= updateData.dataValues.lastName  %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Education </label>
                    <select class="form-select" name="education">
                        <!-- <option value="--Select--">--Select--</option> -->


                        <% ['SMA','S1','S2','S3'].forEach((item)=>{ %>
                            <% if (updateData.dataValues.education===item) { %>
                                <option value="<%= item %>" selected>
                                    <%=item %>
                                </option>

                                <% } else {%>
                                    <option value="<%= item %>">
                                        <%=item %>
                                    </option>

                                    <% } %>
                                        <%})%>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" name="dateOfBirth"
                        value="<%= updateData.dataValues.dateOfBirth  %>" />
                </div>

                <div style="margin: 10px 10px;">
                    <label class="form-check-label">
                        Position :
                    </label>
                    <% ["Staff", "Supervisor" , "Manager" , "CEO" ].forEach((item)=>{%>
                        <% if (updateData.dataValues.position===item) { %>
                            <div class="form-check" style="display: inline-block ">
                                <label class="form-check-label" for="position">
                                </label>
                                <input class="form-check-input" type="radio" name="position" id="position"
                                    value="<%= item %>" checked>
                                <%= item %>
                            </div>
                            <% } else {%>

                                <div class="form-check" style="display: inline-block ">
                                    <label class="form-check-label" for="position">
                                    </label>
                                    <input class="form-check-input" type="radio" name="position" id="position"
                                        value="<%= item %>">
                                    <%= item %>
                                </div>
                                <% }%>

                                    <% }) %>

                                        <div>
                                            <label class="form-label"> Salary</label>
                                            <input type="number" class="form-control" name="salary"
                                                value="<%= updateData.dataValues.salary  %>">
                                        </div>

                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>