<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BetaMart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>BETAMIDI CMS</h5>

            <!-- <div style="margin-bottom: 10px">
                <a class="btn btn-primary" href="/stores">Home</a>
                <a class="btn btn-primary" href="/stores/add">Add Store</a>
                <a class="btn btn-primary" href="/employees">Employees</a>
            </div> -->
            <% if (delData) { %>
                <p class="d-flex justify-content-center" style="color: brown; background-color: bisque;">Employee <%=
                        delData %> telah di hapus dari daftar
                </p>
                <% } %>
                    <h3 class="d-flex justify-content-center">
                        <%= data.dataValues.name %>
                    </h3>
                    <h3 class="d-flex justify-content-center">
                        Code : <%= data.dataValues.code %>
                    </h3>
                    <div class="d-flex justify-content-center mt-4">
                        <a href="/stores/<%= data.dataValues.id %>/employees/add" class="btn btn-primary">Add
                            Employee</a>
                    </div>
                    <div>
                        <div class="mb-3 mt-3">
                            <h4 class="d-flex justify-content-center">List Employee</h4>
                            <h6 class="d-flex justify-content-center">Employees Fee : <%= totalFee ? totalFee : '-' %>
                            </h6>
                        </div>
                        <div>
                            <% if (data.dataValues.Employees.length===0 ) { %>
                                <p class="d-flex justify-content-center fs-4">
                                    "Employee is Empty"
                                </p>

                                <% } else { %>

                                    <table class="table">
                                        <thead>
                                            <tr class="table-info">
                                                <th scope="col">First Name</th>
                                                <th scope="col">Last Name</th>
                                                <th scope="col">Age</th>
                                                <th scope="col">Education</th>
                                                <th scope="col">Position</th>
                                                <th scope="col">Salary</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.dataValues.Employees.forEach((item)=> { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= item.firstName%>
                                                    </th>
                                                    <td>
                                                        <%= item.lastName %>
                                                    </td>
                                                    <td>
                                                        <%= item.age %>
                                                    </td>
                                                    <td>
                                                        <%= item.education %>
                                                    </td>
                                                    <td>
                                                        <%= item.position %>
                                                    </td>
                                                    <td>
                                                        <%= item.salary %>
                                                    </td>

                                                    <td>
                                                        <a href="/stores/<%= data.dataValues.id %>/employees/<%= item.id %>/edit"
                                                            class="btn btn-outline-warning">Edit</a>
                                                        <a href="/stores/<%= data.dataValues.id %>/employees/<%= item.id %>/delete"
                                                            class="btn btn-outline-danger">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <%} %>
                        </div>
                    </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>